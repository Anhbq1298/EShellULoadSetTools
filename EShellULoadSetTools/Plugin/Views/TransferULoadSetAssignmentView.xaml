<Window x:Class="EShellULoadSetTools.Views.TransferULoadSetAssignmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer ULoadSet Assignment"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Content="Get Selected Slab"
                Padding="12,6"
                Width="200"
                HorizontalAlignment="Left"
                Click="SelectFloorButton_Click" />

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <GroupBox Header="Selected Floors"
                      Margin="0,0,8,0">
                <DataGrid ItemsSource="{Binding SelectedFloors}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ETABS GUID"
                                            Binding="{Binding EtabsGuid}"
                                            Width="*" />
                        <DataGridTextColumn Header="ETABS UniqueName"
                                            Binding="{Binding EtabsUniqueName}"
                                            Width="*" />
                        <DataGridTextColumn Header="ETABS Label"
                                            Binding="{Binding EtabsLabel}"
                                            Width="*" />
                        <DataGridTextColumn Header="Assigned Load Set"
                                            Binding="{Binding AssignedLoadSet}"
                                            Width="*" />
                        <DataGridTextColumn Header="SAFE UniqueName"
                                            Binding="{Binding SafeUniqueName}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Transfer Assignment"
                    Width="160"
                    Margin="0,0,8,0"
                    IsEnabled="{Binding IsSafeModelAttached}"
                    Click="TransferAssignmentButton_OnClick" />
            <Button Content="Close"
                    Width="80"
                    IsCancel="True"
                    Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
