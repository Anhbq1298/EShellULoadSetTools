<Window x:Class="EShellULoadSetTools.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing"
        Height="160"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Window.Resources>
        <CubicEase x:Key="EaseInOutCubic" EasingMode="EaseInOut" />
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                             Storyboard.TargetProperty="Angle"
                             From="0"
                             To="360"
                             Duration="0:0:1.2"
                             EasingFunction="{StaticResource EaseInOutCubic}" />
        </Storyboard>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText"
                   Text="Processing..."
                   FontWeight="SemiBold"
                   FontSize="14"
                   TextWrapping="Wrap" />

        <Grid x:Name="SpinnerContainer"
              Grid.Row="1"
              Margin="0,16,0,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Viewbox Width="56" Height="56">
                <Grid Width="56" Height="56">
                    <Grid.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate" />
                    </Grid.RenderTransform>
                    <Grid.Resources>
                        <Style TargetType="Ellipse">
                            <Setter Property="Width" Value="56" />
                            <Setter Property="Height" Value="56" />
                            <Setter Property="StrokeThickness" Value="6" />
                        </Style>
                    </Grid.Resources>

                    <Ellipse Stroke="#FFE6E6E6" />
                    <Path Stroke="#FF0A84FF"
                          StrokeThickness="6"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Data="M28,6 A22,22 0 1 1 27.99,6" />
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
